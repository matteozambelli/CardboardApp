<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/primary_dark_material_dark"
    tools:context=".MainActivity"
    android:weightSum="100"
    android:orientation="horizontal"
    android:gravity="center">

    <!-- left eye view-->
    <RelativeLayout
        android:id="@+id/relativeLayoutLeft"
        android:layout_height="match_parent"
        android:layout_width="fill_parent"
        android:layout_weight="50"
        >

        <RelativeLayout
            android:id="@+id/relativeLayoutAnimationBackgroundLeft"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            </RelativeLayout>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageViewEnemyLeftLane1Id0"
            android:layout_marginTop="127dp"
            android:src="@drawable/prova_rid"
            android:layout_alignRight="@+id/imageViewEnemyLeftLane2Id0"
            android:layout_marginRight="45dp"
           />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageViewEnemyLeftLane3Id0"
            android:layout_marginTop="127dp"
            android:src="@drawable/prova_right_rid"
            android:layout_alignLeft="@+id/imageViewEnemyLeftLane2Id0"
            android:layout_marginLeft="45dp"/>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/imageViewEnemyLeftLane2Id0"
            android:layout_marginTop="118dp"
            android:src="@drawable/car_front_rid"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/target1"
            android:layout_marginTop="127dp"
            android:src="@drawable/target"
            android:layout_marginRight="40dp"
            android:layout_alignRight="@+id/target2"
            />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/target3"
            android:layout_marginTop="127dp"
            android:src="@drawable/target"
            android:layout_marginLeft="40dp"
            android:layout_alignLeft="@+id/target2"/>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/target2"
            android:layout_marginTop="118dp"
            android:src="@drawable/target"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageViewMyCarLeft"
            android:layout_marginTop="176dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/wheel" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewBackgroundBlackLeft"
            android:src="@drawable/background_black"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLifeLeft"
            android:text="LIFE: "
            android:layout_marginTop="235dp"
            android:layout_marginLeft="40dp"
            android:background="#4e5154"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLevelLeft"
            android:text="LEVEL: "
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_alignTop="@+id/textViewLifeLeft"
            android:background="#4e5154"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewScoreLeft"
            android:text="SCORE: "
            android:layout_alignTop="@+id/textViewLifeLeft"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="120dp"
            android:background="#4e5154"
            android:padding="5dp"
            />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Medium Text"
            android:id="@+id/textView3"
            android:layout_marginTop="310dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Medium Text"
            android:id="@+id/textView6"
            android:layout_marginTop="325dp"
            android:layout_centerHorizontal="true" />

        <!--REMOVE THIS-->
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/textViewProva"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/White"/>

        <FrameLayout
            android:id="@+id/frameLayoutGameOverLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/back1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LEVEL: "
                android:id="@+id/textLevelGameOverLeft"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:background="#4e5154"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCORE: "
                android:id="@+id/textScoreGameOverLeft"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55dp"
                android:padding="5dp"
                android:background="#4e5154"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="95dp"
                android:textSize="12dp"
                android:padding="5dp"
                android:text="Press DOWN for insert your name"
                android:id="@+id/editTextInsertNameLeft"
                android:background="@android:color/holo_orange_light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Press UP to restart"
                android:id="@+id/textRestartGameOverLeft"
                android:layout_marginTop="133dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_orange_light"
                android:layout_marginBottom="15dp"
                android:padding="5dp"
                />

        </FrameLayout>
        <!---->
    </RelativeLayout>

<!-- right eye view-->

    <RelativeLayout
        android:id="@+id/relativeLayoutRight"
        android:layout_height="match_parent"
        android:layout_width="fill_parent"
        android:layout_weight="50">

        <RelativeLayout
            android:id="@+id/relativeLayoutAnimationBackgroundRight"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

        </RelativeLayout>


        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageViewEnemyRightLane1Id0"
            android:layout_marginTop="127dp"
            android:src="@drawable/prova_rid"
