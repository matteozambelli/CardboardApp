            android:id="@+id/imageViewEnemyRightLane3Id0"
            android:layout_marginTop="127dp"
            android:src="@drawable/prova_right_rid"
            android:layout_alignLeft="@+id/imageViewEnemyRightLane2Id0"
            android:layout_marginLeft="45dp"/>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/imageViewEnemyRightLane2Id0"
            android:layout_marginTop="118dp"
            android:src="@drawable/car_front_rid"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageViewMyCarRight"
            android:layout_marginTop="172dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/wheel" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewBackgroundBlackRight"
            android:src="@drawable/background_black"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLifeRight"
            android:text="LIFE: "
            android:layout_marginTop="235dp"
            android:layout_marginLeft="40dp"
            android:background="#4e5154"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLevelRight"
            android:text="LEVEL: "
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:layout_alignTop="@+id/textViewLifeRight"
            android:background="#4e5154"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewScoreRight"
            android:text="SCORE: "
            android:layout_alignTop="@+id/textViewLifeRight"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="120dp"
            android:background="#4e5154"
            android:padding="5dp"
            />

        <FrameLayout
            android:id="@+id/frameLayoutGameOverRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/back1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LEVEL: "
                android:id="@+id/textLevelGameOverRight"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:background="#4e5154"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCORE: "
                android:id="@+id/textScoreGameOverRight"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="55dp"
                android:padding="5dp"
                android:background="#4e5154"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="95dp"
                android:textSize="12dp"
                android:padding="5dp"
                android:text="Press DOWN for insert your name"
                android:id="@+id/editTextInsertNameRight"
                android:background="@android:color/holo_orange_light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Press UP to restart"
                android:id="@+id/textRestartGameOverRight"
                android:layout_marginTop="133dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/holo_orange_light"
                android:layout_marginBottom="15dp"
                android:padding="5dp"
                />

        </FrameLayout>

    </RelativeLayout>


</LinearLayout>